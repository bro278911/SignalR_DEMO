@{
    ViewData["Title"] = "Database Monitor";
}

<div class="container">
    <h2>Database Monitor</h2>
    
    <!-- 連接狀態 -->
    <div id="connectionStatus" class="alert alert-info mb-3">
        正在連接...
    </div>

    <!-- 調試信息 -->
    <div id="debugInfo" class="border p-3 mb-3 bg-light" style="max-height: 200px; overflow-y: auto;">
    </div>

    <div id="messagesList" class="list-unstyled"></div>
    <div class="table-responsive">
        <table id="dataTable" class="table table-striped">
            <thead>
                <tr>
                    <th>ChargingID</th>
                    <th>SiteID</th>
                    <th>ReceivedTime</th>
                    <th>Datatime</th>
                    <th>Sequence</th>
                    <th>PowerStatus</th>
                    <th>PcsStatus</th>
                    <th>AcbStatus</th>
                    <th>Soc</th>
                    <th>kWh</th>
                    <th>PCSPower</th>
                    <th>Sitepower</th>
                </tr>
            </thead>
            <tbody>
            </tbody>
        </table>
    </div>
</div>

@section Scripts {
    <script src="~/lib/microsoft/signalr/dist/browser/signalr.js"></script>
    <script src="~/js/site.js"></script>
}